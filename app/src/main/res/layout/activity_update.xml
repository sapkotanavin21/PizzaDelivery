<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Profile.UpdateActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:text="Update your data here"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:fontFamily="serif"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UpdateImage"
        android:layout_width="222dp"
        android:layout_marginTop="9dp"
        android:layout_height="163dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/c5" />

    <EditText
        android:id="@+id/ettFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Firstname"
        android:fontFamily="serif"
        android:textColor="#8E44AD"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/ettLast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lastname"
        android:fontFamily="serif"
        android:textColor="#8E44AD"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/ettPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8E44AD"
        android:hint="Phone number"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/ettUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="#8E44AD"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:background="@drawable/bg_btn"/>

</LinearLayout>


